            <a href="#about-text-container">
              <img id="about-nav" alt="about" src="assets/about.png">
            </a>
            <a href="#demo-text-container">
              <img id="demo-nav" alt="demo" src="assets/demo.png">
            </a>
            <a href="#top-section">
              <img id="face-nav" alt="face logo" src="assets/master_picture.png">
            </a>
            <a href="#instructions-text-container">
              <img id="instructions-nav" alt="instructions" src="assets/instructions.png">
            </a>
          </span>


          <span class="overlay-open">
              <img id="opening-contact" alt="contact" class="menu-closed" src="assets/contact.png">
          </span>

          <!-- The overlay -->
          <div id="myNav" class="overlay">

            <span class="socialmedia">
                <a target = '_blank' href="https://github.com/elorenn">  
                  <img id="github" alt="github logo" class="menu-closed rotateb" src="assets/github.png">
                </a>
                <a target = '_blank' href="https://www.linkedin.com/in/lorenasarasua?trk=nav_responsive_tab_profile">  
                  <img id="linkedin" alt="linkedin logo" class="menu-closed rotateb" src="assets/linkedin.png">
                </a>                
                <a target = '_blank' href="https://www.instagram.com/elorenn_/">  
                  <img id="instagram" alt="instagram logo" class="menu-closed rotateb " src="assets/instagram.png">
                </a>
                <a target = '_blank' href="https://twitter.com/lorenasarasua">  
                  <img id="twitter" alt="twitter logo" class="menu-closed rotateb" src="assets/twitter.png">
                </a>
                <a target = '_blank' href="https://www.facebook.com/lorena.sarasua">
                  <img id="facebook" alt="facebook logo" class="menu-closed rotateb" src="assets/facebook.png">
                </a>  
            </span>


            <!-- Overlay content -->
            <div class="overlay-content">
              <a href="#">About</a>
              <a href="#">Services</a>
              <a href="#">Clients</a>
              <a href="#">Contact</a>
            </div>
          
          <span class="overlay-close">
              <img id="closing-x" alt="close" class="menu-closed" src="assets/x.png">
          </span>

          </div> <!-- overlay -->
         
           
        </div> <!-- nav-wrapper -->
      </nav>
    </div> <!-- navbar-fixed main-nav -->
	
	<div class="section scrollspy" id="top-section"> 
    	<div class="hero row">
        
        <div id="title-whole">
          <img id="title-pollito" alt="the word pollito in yellow 8-bit font" class="responsive-img" src="assets/pollito_text.png">
          <img id="title-massacre" alt="the word massacre in yellow 8-bit font" class="responsive-img" src="assets/massacre_text.png">
        </div>

    	</div> <!-- hero -->
    </div> <!-- top-section -->


    <%= yield %>

        <footer class="page-footer">
          <div class="container">
            <div class="row">
              <div class="col l6 s12" id="hide-maintain-space">
